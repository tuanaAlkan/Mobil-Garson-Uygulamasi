<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/girisyap"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.RegisterActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Ad Giriniz:"
        android:textColor="@color/white" />
    <EditText
        android:id="@+id/edt_adiKayitOl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/tWhite"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textColor="@color/white"
        android:hint="Adı"
        android:backgroundTint="#668462"
        android:inputType="textPersonName" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Soyad Giriniz:"
        android:layout_marginTop="15dp"
        android:textColor="@color/white" />
    <EditText
        android:id="@+id/edt_soyadiKayitOl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/tWhite"
        android:ems="10"
        android:textColor="@color/white"
        android:hint="Soyadı"
        android:backgroundTint="#668462"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="E-mail Giriniz:"
        android:layout_marginTop="15dp"
        android:textColor="@color/white" />
    <EditText
        android:id="@+id/edt_mailKayitOl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/tWhite"
        android:ems="10"
        android:hint="E-mail"
        android:backgroundTint="#668462"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Şifre Giriniz:"
        android:layout_marginTop="15dp"
        android:textColor="@color/white" />
    <EditText
        android:id="@+id/edt_sifreKayitOl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/tWhite"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Şifre"
        android:textColor="@color/white"
        android:backgroundTint="#668462"
        android:inputType="textPersonName" />

    <Button

        android:id="@+id/btn_KayitOl"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#668462"
        android:text="Kayıt Ol" />

</LinearLayout>